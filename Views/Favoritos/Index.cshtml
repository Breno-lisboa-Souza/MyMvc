@model List<FavoritoViewModel>

<h1>Lista de Jogos Favoritos</h1>

@if (Model.Count == 0)
{
    <p>Nenhum jogo favorito encontrado.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID do Jogo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var favorito in Model)
            {
                <tr>
                    <td>@favorito.Id</td>
                    <td>
                        <a href="@Url.Action("Details", "Jogos", new { id = favorito.Id })">Ver Detalhes</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
