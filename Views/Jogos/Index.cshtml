@model IEnumerable<MyMvc.Models.JogoViewModel>

@{ ViewBag.Title = "Jogos"; }

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @Html.Raw(TempData["Mensagem"])
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @Html.Raw(TempData["MensagemErro"])
    </div>
}

<h2>Jogos</h2>
<p>
    @Html.ActionLink("Criar Novo Jogo", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.Genero)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Genero)</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-dark" }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { onclick = "return confirm('Deseja realmente deletar este jogo ?');", @class = "btn btn-danger" }) |
                @Html.ActionLink("Favoritar Jogo", "favoritar", new { jogoId = item.Id }, new { onclick = "return confirm('Deseja realmente favoritar este jogo ?');", @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>
